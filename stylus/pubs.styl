
.pub-items
  clearfix()

  .pub-item
    background-color #FFF
    display inline-block

    h1
      font-size 1.15em
      margin 0

    +at('tablet')
      column(1/2, $cycle: 2)

    +at('desktop')
      column(1/3, $cycle: 3)

    +above('wdesktop')
      column(1/4, $cycle: 4, $uncycle: 4)

    .pub-item-container

      padding 10px

      img
        max-width 100%
        max-height 100%

      p
        margin 0

      .pub-detail
        .pub-title
          display block
          color #6a6a6a
          text-decoration none

          &:hover
            text-decoration underline

        .pub-description
          display: block;
          color: #b5b5b5;
          text-decoration: none;

.pubs-pagination

  ul
    background-color #FFF
    list-style none
    center(175px)

    li
      display inline-block
      margin 5px
      padding 5px
      font-size 20px
      font-weight bold


.page-single-pub

  .pub-title
    font-size 1.5em
    color #6a6a6a

  .single-pub-images-container

    img
      max-width 100%
      max-height 100%

    +above('tablet')
      column(1/2, $cycle: 2)
      margin-right 0 !important

    .swiper-container
        max-height 300px
        max-width 400px

  .pub-details
    background-color #FFF

    +above('tablet')
      column(1/2, $cycle: 2)
      margin-right 0 !important

    elements-map

      +below('tablet')
        .map-container
          height 200px

  .create-event-container
    column(1)

