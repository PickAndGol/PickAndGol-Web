.event-items
  list-style none

  li
    background-color #FFF
    display inline-block

    +above('table')
      column(1/4, $cycle: 4)

    .event-item-container

      img
        max-width:100%;
        max-height:100%;

      .event-detail
        .event-title
          display block
          color #6a6a6a
          text-decoration none

          &:hover
            text-decoration underline

        .event-description
          display: block;
          color: #b5b5b5;
          text-decoration: none;



