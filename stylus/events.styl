
.event-items
  list-style none

  li
    background-color #FFF
    display inline-block

    +at('tablet')
      column(1/2, $cycle: 2)

    +at('desktop')
      column(1/3, $cycle: 3)

    +above('wdesktop')
      column(1/4, $cycle: 4)

    .event-item-container

      padding 10px

      img
        max-width 100%
        max-height 100%

      p
        margin 0

      .event-detail
        .event-title
          display block
          color #6a6a6a
          text-decoration none

          &:hover
            text-decoration underline

        .event-description
          display: block;
          color: #b5b5b5;
          text-decoration: none;


.page-single-item
  .event-detail
    background-color #FFF
    padding 15px

    .event-title
      font-size 2.3em
      color #6a6a6a

    .event-description
      color #a5a5a5

