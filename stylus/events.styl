
.event-items
  list-style none
  //width 100%

  li
    background-color #FFF
    display inline-block

    +above('wdesktop')
      width (100% / 4)

    .event-item-container
      margin 15px

      img
        max-width:100%;
        max-height:100%;

      .event-detail 
        .event-title
          display block
          color #6a6a6a
          text-decoration none

          &:hover
            text-decoration underline
        
        .event-description
          display: block;
          color: #b5b5b5;
          text-decoration: none;



